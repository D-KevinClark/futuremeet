<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/moment_pic_layout_size"
    android:layout_height="@dimen/moment_pic_layout_size">



    <ImageView
        android:clickable="true"
        android:id="@+id/pic_image"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/moment_pics_size"
        android:layout_height="@dimen/moment_pics_size"
        android:layout_centerInParent="true" />

    <ImageView
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/moment_pic_delete_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/pic_x_delete_icon" />

</RelativeLayout>