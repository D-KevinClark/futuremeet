<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/publish_moment_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/normal_white_pressed_grey_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="?attr/listPreferredItemPaddingLeft"
                android:src="@drawable/moment_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:text="@string/publish_moment"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/publish_poi_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/normal_white_pressed_grey_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="?attr/listPreferredItemPaddingLeft"
                android:src="@drawable/future_poi_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:text="@string/publish_future_poi"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
