<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/poi_list_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:alpha="0.6"
        android:visibility="gone"
        android:id="@+id/all_result_showed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poi_listview_footer_height"
        android:gravity="center"
        android:text="@string/all_results_is_displayed" />

    <TextView
        android:alpha="0.6"
        android:visibility="gone"
        android:id="@+id/load_moro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poi_listview_footer_height"
        android:gravity="center"
        android:text="@string/click_to_laod_more" />


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/is_loading"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poi_listview_footer_height">
        <ProgressBar
            android:alpha="0.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small.Inverse"/>
        <TextView
            android:alpha="0.6"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_loading"/>
    </LinearLayout>

</FrameLayout>