<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:mode="twoLine"
    android:paddingLeft="?attr/listPreferredItemPaddingLeft"
    android:paddingRight="?attr/listPreferredItemPaddingRight">

    <TextView android:id="@+id/search_poi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="first"
        android:textAppearance="?attr/textAppearanceSearchResultTitle" />

    <TextView android:id="@+id/search_poi_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_poi_name"
        android:layout_alignStart="@id/search_poi_name"
        android:layout_alignLeft="@id/search_poi_name"
        android:text="test"
        android:lines="1"
        android:textAppearance="?attr/textAppearanceSearchResultSubtitle" />

</TwoLineListItem>